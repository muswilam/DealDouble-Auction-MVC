                <small class="text-muted">Posted by Anonymous on 3/1/17</small>
                <hr>
                <form id="commentForm">
                    <input type="hidden" name="EntityId" value="1" />
                    <input type="hidden" name="RecordId" value="@Model.Auction.Id" />
                    <div class="form-group">
                        <label for="">Write your comment below.</label>
                        <textarea class="form-control" id="Body" name="Body" rows="3" placeholder="Write your comment..."></textarea>
                    </div>
                    <button id="commentBtn" type="button" class="btn btn-success">Leave a comment</button>
                </form>
            </div>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col-lg-9 -->

</div>

<script>
    $("#bidBtn").click(function () {
        $.ajax({
            url: "@Url.Action("Bid","Bids")",
            type: 'Post',
            data: {
                auctionId: '@Model.Auction.Id'
            }
        })
        .done(function (response) {
            debugger;
            if (response.success) {
                window.location.reload();
            } else {
                swal("Oops!", response.message, "error");
            }
        })
        .fail(function () {
            swal("Oops!", "Something went wrong, please try again later.", "error");
        })
    })

    $("#commentBtn").click(function () {
        $.ajax({
            url: "@Url.Action("LeaveComment","Shared")",
            type: 'Post',
            data: $("#commentForm").serialize()
    })
       .done(function (response) {
           if (response.success) {
               window.location.reload();
           } else {
               swal("Oops!", response.message, "error");
           }
       })
       .fail(function () {
           swal("Oops!", "Something went wrong, please try again later.", "error");
       })
    })
</script>