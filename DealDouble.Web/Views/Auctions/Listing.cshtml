@model AuctionsListingViewModel

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Actual Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auction in Model.AllAuctions)
        {
            <tr>
                <td>@auction.Title</td>
                <td>@auction.Category.Name</td>
                <td>$@auction.ActualPrice</td>
                <td>
                    <button data-id="@auction.Id" class="editBtn btn btn-info">Edit</button>
                    <button data-id="@auction.Id" class="deleteBtn btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Pager != null && Model.Pager.TotalPages > 0)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.Pager.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Auctions", new { pageNo = Model.Pager.CurrentPage - 1})">Previous</a></li>
            }

            @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage +1; page++)
            {
                var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active"><a class="page-link" href="@Url.Action("Index", "Auctions", new { pageNo = page})">@page</a></li>
            }

            @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
            {
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", "Auctions", new { pageNo = Model.Pager.CurrentPage + 1})">Next</a></li>
            }
        </ul>
    </nav>
}

<script>
    $(".editBtn").click(function () {
        var id = $(this).attr("data-id");
        $.ajax({
            url: '@Url.Action("Edit","Auctions")',
            method: 'Get',
            data: {
                id: id,
            }
        })
        .done(function (response) {
            $("#formModal").modal("toggle");
            $("#actionArea").html(response);
        })
    });

    $(".deleteBtn").click(function () {
        $("#deleteModal").modal("toggle");
        $("#modalDeleteBtn").attr("data-id", $(this).attr("data-id"));
    });

</script>

